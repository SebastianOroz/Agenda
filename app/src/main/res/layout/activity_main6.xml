<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <EditText
        android:id="@+id/etNuevoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nuevo Usuario"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etNuevoPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Nueva ContraseÃ±a"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnGuardarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Guardar Registro"/>

    <Button
        android:id="@+id/btnCerrarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"/>

</LinearLayout>